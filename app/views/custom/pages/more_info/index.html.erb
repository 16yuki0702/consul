  </div>
</div>

<div id="more-info">
  <div class="row">
    <div class="more-information small-12 medium-9 large-7 column">
      <ul style="list-style: none;">

        <% if feature?(:debates) %>
            <li><a href="more-information/debates">Debates</a></li>
        <% end %>

        <li><a href="more-information/proposals" >Propuestas</a></li>

        <% if feature?(:polls) %>
            <li><a href="more-information/polls" >Votaciones</a></li>
        <% end %>

        <% if feature?(:budgets) %>
            <li><a href="more-information/budgets" >Presupuestos</a></li>
        <% end %>

      </ul>
    </div>

