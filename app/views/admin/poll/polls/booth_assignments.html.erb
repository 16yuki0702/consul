<h2 class="inline-block"><%= t("admin.polls.index.title") %></h2>

<% if @polls.any? %>
  <table>
    <thead>
      <th class="medium-6"><%= t("admin.polls.index.name") %></th>
      <th><%= t("admin.polls.index.dates") %></th>
      <th class="text-right"><%= t("admin.actions.actions") %></th>
    </thead>
    <tbody>
      <!-- Aqui tendríamos que renderizar correctamente un listado de polls con un botón de "manage booth assigments" en vez de edit/config-->
      <%= render @polls %>
    </tbody>
  </table>
<% else %>
  <div class="callout primary">
    <%= t("admin.polls.index.no_polls") %>
  </div>
<% end %>
